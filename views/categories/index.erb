<div class="main"> 

  <table class="categories">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>&nbsp;</th>
    </tr>
    <% for category in @categories %>
    <tr>
      <td>
      <%= category.id %>
      </td>
      <td>
      <%= category.name%>
      </td> 
    </tr>
    <% end %> 
  </table>
</div>